<div class="container">
	<h1><%= @task.title %></h1>

	<p>Due: <%= @task.due_date %></p>
	<p><%= @task.body %></p>

	<%= link_to "Edit", edit_task_path(@task), class: "btn btn-sm btn-primary"%>
	<%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"%>

	<hr>
</div>
